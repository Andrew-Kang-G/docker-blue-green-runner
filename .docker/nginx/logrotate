/var/log/nginx/access.log {
    hourly
    rotate 7
    size 100K
    missingok
    notifempty
    create 0660 nginx root
    postrotate
        /usr/sbin/nginx -s reopen
    endscript
}

/var/log/nginx/error.log {
    hourly
    rotate 7
    size 100K
    missingok
    notifempty
    create 0660 nginx root
    postrotate
        /usr/sbin/nginx -s reopen
    endscript
}