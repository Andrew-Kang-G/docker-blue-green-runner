/var/log/nginx/access.log {
    hourly
    rotate ###NGINX_LOGROTATE_FILE_NUMBER###
    size ###NGINX_LOGROTATE_FILE_SIZE###
    missingok
    notifempty
    create 0660 nginx root
    postrotate
        /usr/sbin/nginx -s reopen
    endscript
}

/var/log/nginx/error.log {
    hourly
    rotate ###NGINX_LOGROTATE_FILE_NUMBER###
    size ###NGINX_LOGROTATE_FILE_SIZE###
    missingok
    notifempty
    create 0660 nginx root
    postrotate
        /usr/sbin/nginx -s reopen
    endscript
}